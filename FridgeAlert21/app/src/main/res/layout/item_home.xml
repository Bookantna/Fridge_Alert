<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- ชื่อสินค้า -->
        <TextView
            android:id="@+id/item_texts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Apples"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_expired"
            app:layout_constraintHorizontal_bias="0" />

        <!-- วันหมดอายุ -->
        <TextView
            android:id="@+id/item_expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-09-30"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/item_texts"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ไอคอนเตือน (จะแสดงเฉพาะใกล้หมด/หมดอายุ) -->
        <ImageView
            android:id="@+id/item_warning_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notifications"
            app:tint="@android:color/holo_red_dark"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- หมวดหมู่ -->
        <TextView
            android:id="@+id/item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/item_texts"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- จำนวน -->
        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x3"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/item_category"
            app:layout_constraintStart_toEndOf="@id/item_category" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
